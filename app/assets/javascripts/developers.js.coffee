$ ->

  $('#SendModal').click ->
    console.log "Handler for .click() called." 
    $('#SendModal').foundation('reveal', 'open')
    $(this).css('border': '5px solid #ccc')
    
$ ->
  
  $('#hide').click ->
    $('#filters').hide()
    $('#show').show()
    $('#hide').hide()
    
$ ->

  $('#show').click ->
    $('#filters').show()
    $('#hide').show()
    $('#show').hide()

