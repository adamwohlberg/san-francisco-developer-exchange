

<div class="row full_vertical_height">
  <div class="large-6 large-centered columns sign_up_form">
<h2>Sign in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div id="facebook_button">
      <%= link_to image_tag("facebook-buttons/facebook.jpg"), user_omniauth_authorize_path(:facebook), :class => "popup", :"data-width" => 600, :"data-height" => 400 %>
      <p>...or login with your email and password.</p>
    </div>
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'info@example.com' %>
    <%= f.input :password, required: false, label: false, placeholder: 'password' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions" id="full_width">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
  </div>
      <div class="show-for-medium-up medium-6 large-6 columns">
  </div>
</div>
<% if session[:errors].present? %>
  <% flash[:alert] = session[:errors]
     session[:errors] = nil 
  %>
<% end %>
<%= javascript_tag "facebookPopUp()" -%>
